{
  "title": "Send Us a Message",
  "fields": [
    {
      "id": "name",
      "label": "Full Name *",
      "type": "text",
      "placeholder": "John Doe",
      "required": true
    },
    {
      "id": "email",
      "label": "Email Address",
      "type": "email",
      "placeholder": "john@example.com",
      "required": false
    },
    {
      "id": "phone",
      "label": "Phone Number *",
      "type": "tel",
      "placeholder": "+251 111 223 344",
      "required": true
    },
    {
      "id": "subject",
      "label": "Subject *",
      "type": "text",
      "placeholder": "How can we help?",
      "required": true
    },
    {
      "id": "message",
      "label": "Message *",
      "type": "textarea",
      "placeholder": "Tell us more about your inquiry...",
      "required": true,
      "rows": 4
    }
  ],
  "submitButton": {
    "text": "Send Message",
    "sendingText": "Sending..."
  }
}
